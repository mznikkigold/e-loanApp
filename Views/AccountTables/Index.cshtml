@model IEnumerable<e_loanApp.Models.AccountTable>


@{
    ViewBag.Title = "View Students Accounts";
}

<p>
    @Html.ActionLink("Create New Account", "Create")
</p>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Approve Transaction</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    @*<th style="width: 10px">#</th>*@
                                    <th>Account Name</th>
                                    <th>Sort-Code</th>
                                    <th>Acct Num</th>
                                    <th style="width: 40px">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>1.</td>*@
                                        <td>@Html.DisplayFor(modelItem => item.Account_name) </td>
                                        <td>@Html.DisplayFor(modelItem => item.Account_SortCode)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Account_number)</td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { id = item.Account_Id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.Account_Id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.Account_Id })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">
                        <ul class="pagination pagination-sm m-0 float-right">
                            <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                            <li class="page-item"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                        </ul>
                    </div>
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>


