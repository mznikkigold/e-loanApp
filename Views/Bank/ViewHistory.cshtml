@model IEnumerable<e_loanApp.Models.Transaction_Table>

@{
    ViewBag.Title = "ViewHistory";
}

<h2>ViewHistory</h2>

<div>
    @Html.ActionLink("🔙 Go Back", "BankPage", "Bank")
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Approve Transaction</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Amount</th>
                                    <th>Sort Code</th>
                                    <th>Acct Num</th>
                                    <th>Purpose</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int rowNo = 0; }
                                @foreach (var history in Model)
                                {
                                    <tr>
                                        <td> @(rowNo += 1)</td>
                                        <td>@Html.DisplayFor(modelItem => history.Receiver_Account_name)</td>
                                        <td>₦@Html.DisplayFor(modelItem => history.amount)</td>
                                        <td><span class="tag tag-success">@Html.DisplayFor(modelItem => history.Receiver_SortCode)</span></td>
                                        <td>@Html.DisplayFor(modelItem => history.Reciever_Accountnum)</td>
                                        <td>@Html.DisplayFor(modelItem => history.Transaction_Purpose)</td>
                                        @if (history.Transaction_status == null)
                                        {
                                            <td style="color:red">Not paid</td>
                                        }
                                        else
                                        {
                                            <td style="color:green">@Html.DisplayFor(modelItem => history.Transaction_status)</td>
                                        }

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>



